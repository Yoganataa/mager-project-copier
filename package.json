{
  "name": "mager-project-copier",
  "displayName": "Mager Project",
  "description": "Copy whole project into one AI-ready snapshot",
  "version": "0.0.4",
  "publisher": "yoganataa",
  "icon": "assets/icons/icon.png",
  "repository": {
    "type": "git",
    "url": "https://github.com/yoganataa/mager-project-copier"
  },
  "engines": {
    "vscode": "^1.107.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onView:magerProject.sidebar"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "configuration": {
      "title": "Mager Project",
      "properties": {
        "magerProject.tokenLimit": {
          "type": "number",
          "default": 200000,
          "description": "Token warning threshold. If the snapshot exceeds this limit, a warning will be shown before copying."
        },
        "magerProject.customTemplates": {
          "type": "array",
          "default": [],
          "description": "Define your own custom prompt templates.",
          "items": {
            "type": "object",
            "properties": {
              "id": {
                "type": "string",
                "description": "Unique ID (e.g., 'my-review')"
              },
              "label": {
                "type": "string",
                "description": "Display name in dropdown"
              },
              "description": {
                "type": "string",
                "description": "Tooltip description"
              },
              "prompt": {
                "type": "string",
                "description": "Prompt content. Use {context} as placeholder.",
                "editPresentation": "multiline"
              }
            }
          }
        }
      }
    },
    "commands": [
      {
        "command": "magerProject.quickCopy",
        "title": "Copy Snapshot (Mager Project)"
      },
      {
        "command": "magerProject.checkUpdate",
        "title": "Check for Updates (Mager Project)"
      }
    ],
    "menus": {
      "explorer/context": [
        {
          "command": "magerProject.quickCopy",
          "group": "7_modification",
          "when": "explorerResourceIsFolder"
        }
      ]
    },
    "viewsContainers": {
      "activitybar": [
        {
          "id": "magerProject",
          "title": "Mager Project",
          "icon": "assets/icons/icon.svg"
        }
      ]
    },
    "views": {
      "magerProject": [
        {
          "id": "magerProject.sidebar",
          "name": "Project Snapshot",
          "type": "webview"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "npm run check-types && npm run lint && node esbuild.js",
    "watch": "npm-run-all -p watch:*",
    "watch:esbuild": "node esbuild.js --watch",
    "watch:tsc": "tsc --noEmit --watch --project tsconfig.json",
    "package": "npm run check-types && npm run lint && node esbuild.js --production",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "check-types": "tsc --noEmit",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.10",
    "@types/node": "22.x",
    "@types/vscode": "^1.107.0",
    "@vscode/test-cli": "^0.0.12",
    "@vscode/test-electron": "^2.5.2",
    "esbuild": "^0.27.1",
    "eslint": "^9.39.1",
    "npm-run-all": "^4.1.5",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.48.1"
  },
  "dependencies": {
    "@mdi/font": "^7.4.47",
    "ignore": "^7.0.5"
  }
}